<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CodeFont.Medium" parent="CodeFont">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="CodeFont.Grey" parent="CodeFont.Medium">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="CodeFont.Small" parent="CodeFont.Medium">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="CodeFont.Small.Bold" parent="CodeFont.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CodeFont.Small.Grey" parent="CodeFont.Small">
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
